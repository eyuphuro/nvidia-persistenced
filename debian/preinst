#!/bin/sh
# Copyright (C) 2013 Canonical Ltd.
#
# Author: Alberto Milone <alberto.milone@canonical.com>
#
# preinst script for nvidia-persistenced
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

pid_file="/var/run/nvidia-persistenced/nvidia-persistenced.pid"
upstart_file="/etc/init/nvidia-persistenced.conf"
upstart_service="nvidia-persistenced"

case "$1" in
    install)
        # Is the daemon is already running?
        if [ -f "$pid_file" ] && ps -p `cat $pid_file` > /dev/null 2>&1; then
            # Stop the daemon
            if initctl status "$upstart_service" | grep "start" > /dev/null 2>&1; then
                initctl stop "$upstart_service"
            else
                kill -9 `cat $pid_file`
            fi
        fi
        
        # Remove any nvidia-persistenced from other installations
        # such as xorg-edgers, the nvidia-installer, etc.
        rm -f "$upstart_file"
    
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
